{{#*inline "page_content"}}
<div
    class="border-b bg-white border-gray-300 px-6 py-2 shadow-sm  text-xl font-bold">
    <div class="h-14 min-h-fit sm:flex sm:items-center sm:justify-between">
        <div>
            <div class="flex items-center">
                <h2
                    class="text-lg font-medium text-gray-800 dark:text-white">
                    {{translate_key "edit_role" ~}}
                </h2>
            </div>
        </div>

    </div>

</div>
<div>
    <!-- -->
    <div class="px-4">
        <form action="/admin/update-role/{{ role_model.id }}" method="post">
            <div
                class="mb-6 ">
                <div
                    class="grid gap-4 mt-5 p-5 gap-y-2 text-sm grid-cols-1 lg:grid-cols-3">
                    <div class="text-gray-600">
                        <p class="font-medium text-lg">
                            {{ translate_key "basic_detail" ~}}
                        </p>
                        <p>
                            {{ translate_key "please_fill_out_all_the_fields"
                            ~}}
                        </p>
                    </div>

                    <div class="lg:col-span-2">
                        <div
                            class="grid gap-4 gap-y-2 text-sm grid-cols-1 md:grid-cols-6">

                            <div class="md:col-span-6 mt-5">
                                {{> components/label
                                label=(translate_key "name")
                                for="name"
                                }}
                                <div class="mt-1">
                                    {{>
                                    components/input
                                    name="name"
                                    value=role_model.name
                                    is_required=true
                                    }}
                                </div>
                                {{#if validation_name_message }}
                                {{> components/input-error
                                error_message=validation_name_message
                                }}
                                {{/if}}
                            </div>

                            <div class="md:col-span-6">
                                {{> components/label
                                label=(translate_key "identifier")
                                for="identifier"
                                }}
                                <div class="mt-1">
                                    {{> components/input
                                    name="identifier"
                                    value=role_model.identifier
                                    is_required=true
                                    }}
                                </div>
                                {{#if validation_identifier_message }}
                                {{> components/input-error
                                error_message=validation_identifier_message
                                }}
                                {{/if}}
                            </div>

                            <div class="md:col-span-6">
                                <div class="flex flex-row">

                                    <!-- DASHBOARD PERMISSION CARD -->
                                    <div class="basis-1/3">
                                        <div class="rounded border">
                                            <div
                                                class="border-b  p-3 font-semibold">
                                                {{ translate_key "dashboard" ~}}
                                            </div>
                                            <div class="p-3">
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{> components/switch
                                                        id="permission-dashboard"
                                                        value="dashboard"
                                                        init_value=(is_vector_contains role_model.permissions "dashboard")
                                                        name="permissions[]"}}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "dashboard")
                                                        for="permission-dashboard"
                                                        }}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- ADMIN USER PERMISSION CARD -->
                                    <div class="basis-1/3 ml-3">
                                        <div class="rounded border">
                                            <div
                                                class="border-b p-3 font-semibold">
                                                {{ translate_key "admin_user"
                                                ~}}
                                            </div>
                                            <div class="p-3">
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{> components/switch
                                                        id="permission-admin-user-table"
                                                        value="admin_user_table"
                                                        init_value=(is_vector_contains role_model.permissions "admin_user_table")
                                                        name="permissions[]"}}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "admin_user_table")
                                                        for="permission-admin-user-table"
                                                        }}
                                                    </span>
                                                </div>
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{>
                                                        components/switch
                                                        id="permission-admin-user-create"
                                                        value="admin_user_create"
                                                        init_value=(is_vector_contains role_model.permissions "admin_user_create")
                                                        name="permissions[]"
                                                        }}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "admin_user_create")
                                                        for="permission-admin-user-create"
                                                        }}
                                                    </span>
                                                </div>
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{> components/switch
                                                        id="permission-admin-user-update"
                                                        value="admin_user_update"
                                                        init_value=(is_vector_contains role_model.permissions "admin_user_update")
                                                        name="permissions[]"}}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "admin_user_update")
                                                        for="permission-admin-user-update"
                                                        }}
                                                    </span>
                                                </div>
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{> components/switch
                                                        id="permission-admin-user-delete"
                                                        value="admin_user_delete"
                                                        init_value=(is_vector_contains role_model.permissions "admin_user_delete")
                                                        name="permissions[]"}}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "admin_user_delete")
                                                        for="permission-admin-user-delete"
                                                        }}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- ROLE PERMISSION CARD -->
                                    <div class="basis-1/3 ml-3">
                                        <div class="rounded border">
                                            <div
                                                class="border-b p-3 font-semibold">
                                                {{ translate_key "role"
                                                ~}}
                                            </div>
                                            <div class="p-3">
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{> components/switch
                                                        id="permission-role-table"
                                                        value="role_table"
                                                        init_value=(is_vector_contains role_model.permissions "role_table")
                                                        name="permissions[]"}}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "role_table")
                                                        for="permission-role-table"
                                                        }}
                                                    </span>
                                                </div>
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{>
                                                        components/switch
                                                        id="permission-role-create"
                                                        value="role_create"
                                                        init_value=(is_vector_contains role_model.permissions "role_create")
                                                        name="permissions[]"
                                                        }}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "role_create")
                                                        for="permission-role-create"
                                                        }}
                                                    </span>
                                                </div>
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{> components/switch
                                                        id="permission-role-update"
                                                        init_value=(is_vector_contains role_model.permissions "role_update")
                                                        value="role_update"
                                                        name="permissions[]"}}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "role_update")
                                                        for="permission-role-update"
                                                        }}
                                                    </span>
                                                </div>
                                                <div
                                                    class="mt-1 flex items-center">
                                                    <span>
                                                        {{> components/switch
                                                        id="permission-role-delete"
                                                        init_value=(is_vector_contains role_model.permissions "role_delete")
                                                        value="role_delete"
                                                        name="permissions[]"}}
                                                    </span>
                                                    <span class="ml-3">
                                                        {{> components/label
                                                        label=(translate_key
                                                        "role_delete")
                                                        for="permission-role-delete"
                                                        }}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="md:col-span-6 mt-5 text-right">
                                <div class="inline-flex items-end">
                                    <button type="submit"
                                        class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                                        {{ translate_key "submit" ~}}
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{/inline}}

{{> layout/app}}
