<input
    {{#if id}}
        id="{{ id }}"
    {{else}}
        id="{{ name }}"
    {{/if}}

    name="{{ name }}" 
    value="{{ value }}"
    type="{{ type }}" 

    {{#if is_required}}
        required
    {{/if}}

    {{#if autofocus}}
        autofocus
    {{/if}}

    {{#if x-model}}
        x-model="{{x-model}}"
    {{/if}}

    {{#if x-change}}
        x-on:change="{{x-change}}"
    {{/if}}
    placeholder="{{ placeholder}}"
    class="appearance-none rounded-md ring-1 ring-primary-500 relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-primary-500 sm:text-sm focus:z-10 {{ class }}"
/>
